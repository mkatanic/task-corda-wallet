doctype html
html
  head
    title= title
    link(rel="stylesheet" type="text/css" href="/stylesheets/spinner.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
    script.
            function spinner() {
                document.getElementById("overlay").style.display = "inherit";
                document.getElementById("timer").style.display = "inherit";
            }
  body
    #mainHeader  
      div(onclick='location.href="/";' style='cursor:pointer;')
        h1= title
        if me
          p Welcome, #{me}
    if msg
      div(id='message')
        br
        div.container(id='message' style='border:1px solid #CCC; font-size: 18px;')
          button.btn.btn-danger(onclick='document.getElementById("message").style.display="none"' style='float: right; top: 0%;') x
          span(style='font-size:18px') #{msg}
    block content
    div(id="overlay" style=" display: none; z-index: 20; background: #e9e9e9; position: absolute; top: 0; right: 0; bottom: 0; left: 0; opacity: 0.8;")
        div(id="timer" style=" display: none; z-index: 21; position: absolute; top: 200; right: 0; bottom: 0; left: 0; ")
            center
                div(class="bar-timer")
                    div(class="bar-inner")
